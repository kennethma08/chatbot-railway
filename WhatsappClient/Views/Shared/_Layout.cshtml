<!doctype html>
<html lang="en">
<head>
    <title>ulu</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="icon" href="/assets/images/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700&display=swap" id="main-font-link">

    <link rel="stylesheet" href="/assets/css/style.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.bootstrap5.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.2.5/css/buttons.bootstrap5.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/WhatsappClient.styles.css" asp-append-version="true" />

    <script type="importmap"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        var ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
        var act = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLowerInvariant();
        Func<string, bool> isCtrl = c => string.Equals(ctrl, c, StringComparison.OrdinalIgnoreCase);

        string SectionLabel(string c) => c switch
        {
            "dashboard" => "Dashboard",
            "chat" => "Chats",
            "contacto" => "Clientes",
            "agentes" => "Agentes",
            _ => string.IsNullOrEmpty(c) ? "Sección" : char.ToUpper(c[0]) + (c.Length > 1 ? c[1..] : "")
        };

        string ActionLabel(string a) => a switch
        {
            "index" => "Listado",
            "create" => "Crear",
            "edit" => "Editar",
            "details" => "Detalles",
            _ => string.IsNullOrEmpty(a) ? "" : char.ToUpper(a[0]) + (a.Length > 1 ? a[1..] : "")
        };

        string SectionIcon(string c) => c switch
        {
            "dashboard" => "bi-speedometer2",
            "chat" => "bi-chat-dots",
            "contacto" => "bi-people",
            "agentes" => "bi-person-gear",
            _ => "bi-grid-1x2"
        };

        var sectionText = SectionLabel(ctrl);
        var actionText = ActionLabel(act);
        var iconClass = SectionIcon(ctrl);
        var pageTitle = ViewData["Title"] as string ?? sectionText;
        bool isIndex = string.Equals(act, "index", StringComparison.OrdinalIgnoreCase);
        var ctrlProper = string.IsNullOrEmpty(ctrl) ? "Dashboard" : char.ToUpper(ctrl[0]) + (ctrl.Length > 1 ? ctrl[1..] : "");
    }

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <a href="@Url.Action("Index", "Dashboard")" class="logo" style="margin-bottom: 10px !important;">
                    <img src="/assets/images/Logo-en-Negativo-ULU.png" alt="ULU Logo">
                </a>

                <ul class="list-unstyled components mb-5">
                    <li class="@(isCtrl("dashboard") ? "active" : null)">
                        <a class="sidebar-link d-flex align-items-center gap-2 @(isCtrl("dashboard") ? "active" : "")"
                           href="@Url.Action("Index", "Dashboard")"
                           aria-current="@(isCtrl("dashboard") ? "page" : null)">
                            <i class="bi bi-speedometer2" aria-hidden="true"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="@(isCtrl("chat") ? "active" : null)">
                        <a class="sidebar-link d-flex align-items-center gap-2 @(isCtrl("chat") ? "active" : "")"
                           href="@Url.Action("Index", "Chat")"
                           aria-current="@(isCtrl("chat") ? "page" : null)">
                            <i class="bi bi-chat-dots" aria-hidden="true"></i>
                            <span>Chats</span>
                        </a>
                    </li>
                    <li class="@(isCtrl("contacto") ? "active" : null)">
                        <a class="sidebar-link d-flex align-items-center gap-2 @(isCtrl("contacto") ? "active" : "")"
                           href="@Url.Action("Index", "Contacto")"
                           aria-current="@(isCtrl("contacto") ? "page" : null)">
                            <i class="bi bi-people" aria-hidden="true"></i>
                            <span>Clientes</span>
                        </a>
                    </li>
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <li class="@(isCtrl("agentes") ? "active" : null)">
                            <a class="sidebar-link d-flex align-items-center gap-2 @(isCtrl("agentes") ? "active" : "")"
                               href="@Url.Action("Index", "Agentes")"
                               aria-current="@(isCtrl("agentes") ? "page" : null)">
                                <i class="bi bi-person-gear" aria-hidden="true"></i>
                                <span>Agentes</span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <li class="@(isCtrl("reportes") ? "active" : null)">
                            <a class="sidebar-link d-flex align-items-center gap-2 @(isCtrl("reportes") ? "active" : "")"
                               href="@Url.Action("Index", "Reportes")"
                               aria-current="@(isCtrl("reportes") ? "page" : null)">
                                <i class="bi bi-bar-chart" aria-hidden="true"></i>
                                <span>Analíticas</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <div id="content" class="pt-0 w-100">
            <header class="d-flex align-items-center justify-content-between bg-white border-bottom py-2 px-3 px-lg-4">
                <div class="d-flex align-items-center gap-2 gap-lg-3">
                    <button type="button" id="sidebarCollapse" class="btntoggle">
                        <i class="fa fa-bars"></i>
                        <span class="visually-hidden">Toggle Menu</span>
                    </button>

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 small">
                            <li class="breadcrumb-item">
                                <span class="text-body">Inicio</span>
                            </li>
                            <li class="breadcrumb-item @(isIndex ? "active text-muted" : "")" @(isIndex ? "aria-current=\"page\"" : "")>
                                @if (isIndex)
                                {
                                    <span class="text-muted">@sectionText</span>
                                }
                                else
                                {
                                    <a href="@Url.Action("Index", ctrlProper)">@sectionText</a>
                                }
                            </li>
                            @if (!isIndex && !string.IsNullOrWhiteSpace(actionText))
                            {
                                <li class="breadcrumb-item active text-muted" aria-current="page">
                                    @actionText
                                </li>
                            }
                        </ol>
                    </nav>
                </div>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="dropdown">
                        <button class="btn btn-light border rounded-3 d-flex align-items-center gap-2 px-2 px-lg-3 py-1" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-5"></i>
                            <span class="fw-medium">@User.Identity!.Name</span>
                            <i class="bi bi-chevron-down"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                            <li>
                                <form action="@Url.Action("Logout","Account")" method="post" class="py-1">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item d-flex align-items-center gap-2">
                                        <i class="bi bi-box-arrow-right"></i>
                                        Cerrar sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </header>

            <div class="container-fluid px-3 px-lg-4 py-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.bootstrap5.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.colVis.min.js"></script>

    <script src="/assets/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
